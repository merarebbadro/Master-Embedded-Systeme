#include "stm32f103x6.h"
#include "Stm32_F103C6_gpio_driver.h"
#include "Stm32_F103C6_EXTI_driver.h"

static uint8_t IRQ_flag = 0;

void clock_init()
{
	// Enable clock GPIOA, GBIOB, AFIO
	RCC_GPIOA_CLK_EN();
	RCC_GPIOB_CLK_EN();
	RCC_AFIO_CLK_EN();
}

void my_delay(uint32_t time)
{
	uint32_t i,j;

	for(i = 0; i < time; i++)
	{
		for(j = 0; j < 255; j++);
	}
}

void EXTI9_CallBack(void)
{
	IRQ_flag = 1;
}

int Val1 = 0;

int main(void)
{
	clock_init();

	EXTI_PinConfig_t EXTI_CFG;
	EXTI_CFG.EXTI_PIN = EXTI9PB9;
	EXTI_CFG.trigger_case = EXTI_Trigger_RISING;
	EXTI_CFG.P_IRQ_CallBack = EXTI9_CallBack;
	EXTI_CFG.IRQ_EN = EXTI_IRQ_Enable;
	MCAL_EXTI_GPIO_Init(&EXTI_CFG);

	IRQ_flag = 1;

	/* no operation : that means CPU take one instruction doing nothing */
	__asm("nop \n\t nop \n\t nop");

	/* move Val1, 0xff "move 0xff in Val1" "%0 means the 1st argument it'll meet" */
	__asm("mov %0, #0xFF"
			: "=r" (Val1) ); /* 1st column describes output parameters */


	__asm("nop \n\t nop \n\t nop");

	while(1)
	{
		if( IRQ_flag )
		{
			IRQ_flag = 0;
		}
	}
}
